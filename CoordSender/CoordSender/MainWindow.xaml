<Window x:Class="CoordSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Keyboard.KeyDown="Window_KeyDown" 
        Keyboard.KeyUp="Window_KeyUp">
    <Grid  Mouse.MouseDown="Window_MouseDown"
        Mouse.MouseUp="Window_MouseUp" 
       >
        <TextBlock   >
            <TextBlock.Text>
              <Binding Path="DataSource"/>
            </TextBlock.Text>
        </TextBlock>
    </Grid>
</Window>
